<aside>
  <div class="company-name">
    <a href="/">
    <img src="../img/logo.png">
  </a>
  </div>
  <div class="user">
    <% if (user.avatar) { %>
      <img src="./img/<%= user.avatar %>" width="100" height="100">
    <% } else { %>
      <img src="./img/boy.png" width="100" height="100">
    <% } %>
    <p>Welcome, <%= user.username %><i class="bi bi-caret-down-fill"></i></p>
  </div>
  <div class="menu">
      <a href="/">
        <span><i class="bi bi-speedometer2"></i></span>
        <span class="link">Dashboard</span>
      </a>
      <a href="/myForm">
        <span><i class="bi bi-card-list"></i></span>
        <span class="link">My Form</span>
      </a>
      <a href="/profil">
        <span><i class="bi bi-person-fill"></i></span>
        <span class="link">Profil</span>
      </a>
      <a href="/logout">
        <span><i class="bi bi-box-arrow-left"></i></span>
        <span class="link">Logout</span>
      </a>
  </div>
</aside>
<div class="container-wrapper d-flex " style="gap:30px;">
  <div class="profil-wrapper">
    <div class="item item-1">
      <% if (user.active === 0) { %>
        <% if (user.avatar) { %>
          <img src="./img/<%= user.avatar %>" width="100" height="100">
        <% } else { %>
          <img src="./img/boy.png" width="100" height="100">
        <% } %>
        <span class="dot" style="
        height: 15px;
        width: 15px;
        background-color: rgb(49, 209, 49);
        border-radius: 50%;
        border:2px solid #fff;
        margin-top: -37px;
        margin-right:-63px;
        margin-bottom:15px;
        z-index:99;
        "
        ></span>
        <p class="profil-name"><%= user.username %></p>
      <% } else { %>
        <% if (user.avatar) { %>
          <img src="./img/<%= user.avatar %>" width="100" height="100">
        <% } else { %>
          <img src="./img/default-avatar.png" width="100" height="100">
        <% } %>
        <p class="profil-name"><%= user.username %></p>
      <% } %>
    </div>
    
    <div class="item item-2">
        <div class="title" style="position:relative;">
          <span class="icon"><i class="bi bi-file-earmark-person"></i></span>
          <span class="sub-title">User</span>
          <a href="/edit-profil" class="btn"style="text-decoration:none;
          background-color: #12CBC4; 
          color: #fff; position: absolute;right:0;" ><i class="bi bi-pencil-square"></i></a>
        </div>
        <div class="personal-info">
          <div class="ques">
            <span class="phone">Email</span>
          </div>
          <div class="answ">
            <span class="phone"><%= user.email %></span>
          </div>
        </div>
    </div>
  </div>
  <div class="profil-wrapper">
    <div class="item item-2">
      <div class="title">
        <span class="icon"><i class="bi bi-incognito"></i></span>
        <span class="sub-title">Password</span>
      </div>
    </div>
    <form class="px-4" action="/ganti-password" method="POST">
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Current Password</label>
        <input type="password" name="currentPassword" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">New Password</label>
        <input type="password" name="newPassword" class="form-control" id="exampleInputPassword1">
      </div>
      <button 
      type="submit"
       class="btn"
       style="
        text-decoration:none;
        background-color: #12CBC4; 
        color: #fff;margin-bottom:30px;"
        >Ganti Password</button>
    </form>
</div>